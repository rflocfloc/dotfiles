# This is the configuration file for Ghostty.
#
#
# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.
#


# Themes and interface
#
font-family = "Dank Mono"
#theme = tokyonight
theme = gruvbox-material 
background-opacity = 1 


# Windows
#
maximize = true
gtk-titlebar = false


# System options 
#
shell-integration-features = sudo
shell-integration = detect
copy-on-select = true

# drop down terminal
#
keybind = global:super+ctrl+t=toggle_quick_terminal
quick-terminal-position = bottom

# Keybindings
#
keybind=ctrl+[=previous_tab
keybind=ctrl+]=next_tab

keybind=ctrl+alt+v=new_split:right
keybind=ctrl+alt+h=new_split:down

keybind=ctrl+alt+f=toggle_split_zoom
keybind=ctrl+alt+s=toggle_tab_overview

